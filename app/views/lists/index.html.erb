<div class="container">
  <ul>
    <% @lists.each do |list| %>
      <li class="index-li">
      <% if list.photos.first %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photos.first.key, height: 400, width: 400, crop: :pad %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>
